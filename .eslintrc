{
    "extends": "eslint:recommended",
    "env": {
	  "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "plugins": [
      "node",
      "promise",
      "standard"
    ],
    "rules": {
	  "indent": ["error", "tab"],
	  "no-trailing-spaces": "error",
	  "no-multi-spaces": "error",
      "no-console": 0,
	  "no-constant-condition": ["error", { "checkLoops": false }],
	  "no-multiple-empty-lines": ["error", { "max": 2 }]
    }
}
